<textarea
    class="{{ attr.classBase|d('form-control') }}{% if attr.sizing %} form-control-{{ attr.sizing }}{% endif %}{% if attr.err %} is-invalid{% elif attr.success %} is-valid{% endif %}{{ attr.class }}"
    style="{{ attr.style }}"
    {{ attributes|safe -}}
    {{ params|join(' ') -}}>
    {{- attr.value|safe -}}
    </textarea>